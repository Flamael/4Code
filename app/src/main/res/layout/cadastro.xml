<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark">

    <ImageButton
        android:id="@+id/btVoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="19dp"
        android:background="@android:color/transparent"
        android:onClick="voltar"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="54dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="17dp"
        android:text="Criar conta"
        android:textColor="@android:color/black"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/ctEmail"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:background="@android:color/background_light"
        android:ems="50"
        android:fontFamily="sans-serif"
        android:hint="Digite seu email"
        android:inputType="textPersonName"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/ctSenha"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/ctEmail"
        android:layout_alignStart="@+id/ctEmail"
        android:layout_below="@+id/ctEmail"
        android:layout_marginTop="30dp"
        android:background="@android:color/background_light"
        android:ems="50"
        android:fontFamily="sans-serif"
        android:hint="Digite sua senha"
        android:inputType="textPassword|textPersonName"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btCriarConta"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/ctSenha"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimary"
        android:onClick="salvar"
        android:text="Criar conta"
        android:textColor="@android:color/background_light" />

</RelativeLayout>
